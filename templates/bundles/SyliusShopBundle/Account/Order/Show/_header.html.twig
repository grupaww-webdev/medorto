{% import '@SyliusUi/Macro/buttons.html.twig' as buttons %}
{% import '@SyliusUi/Macro/flags.html.twig' as flags %}

<h2 class="text-darkBlue">
    {{ 'app.ui.order'|trans }} #{{ order.number }}
</h2>
<div class="row">
    <div class="order__details">
        <div class="order__detail">
            <div class="labelbox">{{ 'app.order.status'|trans }}</div>
            <div class="valuebox">{{ ('sylius.ui.' ~ order.state)|trans }}</div>
        </div>
        <div class="order__detail">
            <div class="labelbox">{{ 'app.order.placed_date'|trans }}</div>
            <div class="valuebox">{{ order.checkoutCompletedAt|format_date }}</div>
        </div>
        <div class="order__detail">
            <div class="labelbox">{{ 'app.order.shipping_date'|trans }}</div>
            <div class="valuebox">{{ ('sylius.ui.' ~ order.state)|trans }}</div>
        </div>
        <div class="order__detail">
            <div class="labelbox">{{ 'app.order.payment_state'|trans }}</div>
            <div class="valuebox">
                {{ ('sylius.ui.' ~ order.paymentState)|trans }}
                {% if order.paymentState in ['awaiting_payment'] %}
                    <a href="{{ path('sylius_shop_order_show', {'tokenValue': order.tokenValue}) }}">{{ 'sylius.ui.pay'|trans }}</a>
                {% endif %}

            </div>
        </div>
    </div>
</div>
