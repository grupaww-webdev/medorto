<section class="products container wrapper">
    <div class="row">
        <div class="products__lists col-sm-12 col-md-9">
            <h3 class="products__heading text-darkBlue flex">
                {{ 'app.ui.homepage.bestsellers'|trans }}
                <a href="#" class="button button--darkBlue">{{ 'app.ui.buttons.see_more'|trans }}</a>
            </h3>
            <div class="row">
                {{ render(url('app_shop_product_bestsellers_list', {'count': 3, 'template': '@SyliusShop/Homepage/_list.html.twig'})) }}
            </div>
            <h3 class="products__heading text-darkBlue flex">
                {{ 'app.ui.homepage.newests'|trans }}
                <a href="" class="button button--darkBlue">{{ 'app.ui.buttons.see_more'|trans }}</a>
            </h3>
            <div class="row">
