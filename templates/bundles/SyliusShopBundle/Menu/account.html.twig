{% block root %}
    <ul class="account__list">
        {{ block('list') }}
    </ul>
{% endblock %}

{% block list %}
    {% for item in item.children %}
        {{ block('item') }}
    {% endfor %}
{% endblock %}

{% block item %}
    <li>
        <a href="{{ item.uri }}">
            {{ block('image') }}
            {{ item.label|trans }}
        </a>
    </li>
{% endblock %}

