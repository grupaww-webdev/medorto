{% extends '@SyliusShop/Layout/cart.html.twig' %}

{% form_theme form 'App/Form/theme.html.twig' %}

{% block title %}{{ 'sylius.ui.address'|trans }} | {{ parent() }}{% endblock %}

{% set header = 'sylius.ui.cart.step_2.header' %}

{% block cart_content %}
<section class="login login--register login--cart cart__forms container">
    {{ sylius_template_event('sylius.shop.checkout.address.before_form', {'order': order}) }}
    {{ form_start(form, {'action': path('sylius_shop_checkout_address'), 'attr': {'class': 'col-sm-12', 'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    <input type="hidden" name="_method" value="PUT" />
    <div class="row">
        {% include '@SyliusShop/Checkout/Address/_form.html.twig' %}
    </div>
    {{ form_end(form, {'render_rest': false}) }}
</section>
{% endblock %}
