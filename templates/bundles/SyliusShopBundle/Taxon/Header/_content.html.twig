{% if taxon is not null %}
    {% if taxon.images.first %}
        {% set path = taxon.images.first.path|imagine_filter('app_shop_category_thumbnail') %}
    {% else %}
        {% set path = '//placehold.it/1300x240' %}
    {% endif %}
    <section class="slider slider--static">
        <div class="glide__slides">
            <div class="glide__slide">
                <div class="col-xs-12 col-md-6 px-0">
                    <img class="responsive-img" src="{{ path }}" alt="{{ taxon.name }}">
                </div>
                <div class="col-xs-12 col-md-6 bg-darkBlue text-white slider__item">
                    <div class="slider__content">
                        <h2>{{ taxon.name }}</h2>
                        <p>{{ taxon.description }}</p>
                        <a href="{{ path('sylius_shop_product_index', {'slug': taxon.slug, '_locale': taxon.translation.locale}) }}" class="button button--white">{{ 'app.ui.buttons.see'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endif %}
